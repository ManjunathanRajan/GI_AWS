{
  "variables": {
    "docker_image": "716514200744.dkr.ecr.us-west-2.amazonaws.com/packer-awsal2023:latest"
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{ user `docker_image` }}",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "docker import {{.BuildName}}-{{.BuilderType}}.tar",
        "docker run -d --name temp_container {{ user `docker_image` }}",
        "docker cp temp_container:/ /mnt/docker_root",
        "docker rm -f temp_container"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "amazon-import",
      "region": "us-west-2",
      "s3_bucket_name": "my-bucket-ami-testing",
      "ami_name": "linux-docker-ami-{{timestamp}}"
    }
  ]
}
