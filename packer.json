{
  "variables": {
    "aws_region": "us-west-2",
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "instance_type": "t2.micro",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "Windows_Server-2019-English-Full-Base-*",
          "root-device-type": "ebs"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "ami_name": "my-windows-ami-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "Set-ExecutionPolicy -ExecutionPolicy RemoteSigned -Force",
        "Set-Item WSMan:\\localhost\\Service\\AllowUnencrypted -Value True",
        "Install-WindowsFeature -Name Web-Server",
        "Invoke-WebRequest -Uri https://awscli.amazonaws.com/awscli-exe-windows-x86_64.zip -OutFile awscliv2.zip",
        "Expand-Archive -Path awscliv2.zip -DestinationPath $env:ProgramFiles",
        "C:\\Program Files\\awscli\\bin\\aws.exe s3 cp s3://my-bucket/my-file.txt C:\\inetpub\\wwwroot\\my-file.txt"
      ],
      "pause_before": "10s"
    },
    {
      "type": "file",
      "source": "answer_files/Unattend.xml",
      "destination": "c:/Windows/Panther/Unattend/Unattend.xml"
    },
    {
      "type": "powershell",
      "inline": [
        "C:\\Windows\\System32\\Sysprep\\Sysprep.exe /generalize /oobe /shutdown /unattend:c:/Windows/Panther/Unattend/Unattend.xml"
      ],
      "pause_before": "10s"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ]
}
